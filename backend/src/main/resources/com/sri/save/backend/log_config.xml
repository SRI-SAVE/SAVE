<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!--
    Log4j properties file for the loader. Log4j is a standard logging API.
    See http://jakarta.apache.org/log4j/docs/index.html for more information.
-->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%-6r %d %-16C{1}: %-5p - %m%n"/>
        </layout>
    </appender>

    <appender name="LogFile" class="org.apache.log4j.FileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="file" value="gateway.log"/>
        <param name="append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%-6r %d %-16C{1}: %-5p - %m%n"/>
        </layout>
    </appender>

    <!--  Example of debugging only one class or package: -->
    <!--
    <logger name="com.sri.save.backend">
        <level value="DEBUG"/>
    </logger>
    -->

    <root>
        <priority value="INFO"/>
        <appender-ref ref="stdout"/>
        <appender-ref ref="LogFile"/>
    </root>

</log4j:configuration>
